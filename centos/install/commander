sudo mkdir /opt/ninja; \
sudo wget "https://github.com/jhasselbring/commander-endpoint/releases/download/v0.1.0/Commander-linux" -O /opt/ninja/Commander-linux 1> /dev/null | sudo chmod +x /opt/ninja/Commander-linux 1> /dev/null | \
sudo wget "https://raw.githubusercontent.com/jhasselbring/s/master/centos/install/commander-files/commander.service" -O /lib/systemd/system/commander.service 1> /dev/null | \
sudo systemctl daemon-reload | \
sudo systemctl enable commander | \
sudo systemctl start commander